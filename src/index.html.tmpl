<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Slider Teleprompter</title>
  <link rel="stylesheet" href="styles/style.css">

  <script>
    (function () {
      console.log('Attaching')
      document.addEventListener('keydown', e => {
        let keysEvent = new CustomEvent('keysEvent', {
          detail: {
            originalEvent: e
          }
        });
        window.dispatchEvent(keysEvent);
      });
    })();
  </script>
  <script src="https://unpkg.com/wavesurfer.js"></script>
  <script src="scripts/wavesurfer.js/dist/plugin/wavesurfer.timeline.js"></script>
  <script src="scripts/wavesurfer.js/dist/plugin/wavesurfer.markers.js"></script>
 
  <script type="module">
    import('/scripts/main.js').then(mod => mod.default())
  </script>
  <link rel="shortcut icon" href="Teleprompter.svg">
</head>

<body>
  <div id="root">
    <header class="header">
      <a href="/"><img src="teleprompter.svg" alt="logo" /></a>
      <h1>Slider Teleprompter</h1>
      <span id="status_box">Recording</span>
    </header>
    <main id="root-main" class="container">
      <!--Embedded slides samples generated by marp-->

    </main>

    <aside class="notes"></aside>
    <button class="btn-download">Save All</button>
  </div>
</body>

</html>